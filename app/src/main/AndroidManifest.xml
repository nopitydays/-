<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upload.yannadams.trailarticles">

    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 文件写入SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:hardwareAccelerated="false"
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/xiaodaoicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePage"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Dynamic"
            android:label="@string/title_activity_dynamic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyFriends"
            android:label="@string/title_activity_my_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyCollect"
            android:label="@string/title_activity_my_collect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditPersonalInfoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PersonalInformationActivity"
            android:label="@string/title_activity_personal_information"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LogInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".HeadPhotoActivity"
            android:label="@string/title_activity_head_photo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ArticleActivity"
            android:label="MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
